<!DOCTYPE html>
<html lang="en">





<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/demo.css">
    <title>ET</title>
</head>

<body>

    <div class="body-box">

        <div class="left-nav navbar-dark bg-dark">
            <div class="left-nav-item">
                <h2>ADMIN</h2>
            </div>
            <div class="add-new-box left-nav-item">
                <a href="/new-data">
                    <button class="left-nav-btn">Add new data</button>
                </a>
            </div>
            <div class="order-box left-nav-item">
                <a href="">
                    <button class="left-nav-btn">Recent Orders</button>
                </a>
            </div>
        </div>

        <div class="categ">


            <div class="navbar-1">
                <nav class="navbar navbar-dark bg-dark search-box ">
                    <div class="container-fluid nav-box">
                        <div class="nav-brand"><img src="img/et.jpg" alt=""></div>
                        <form class="search-form" method="post" action="/admin/s" autocomplete="off">
                            <input name="name" class="form-control search-box-t me-2" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn search-btn" type="submit"><i class="fa fa-search"
                                    aria-hidden="true"></i></button>
                        </form>
                </nav>
            </div>


            <div class="all-items">

                <% category.forEach(function (category) {%>
                    <div class="allitem-card">
                        <div class="aic-head" style="text-transform: uppercase;">
                            <%= category.category %>
                        </div>
                        <div class="aic-content">
                            <% product.forEach(function (product) { %>
                                <% if(category.category==product.category) { %>

                                    <div class="aic-content-box">
                                        <a href="/admin/i?name=<%= product.name %> "><img
                                                src="../img/<%= product.image %>" alt="">
                                        </a>
                                        <a href="/deleteP?id=<%= product.name %>" 
                                            onclick="return confirm('You want to delete whole product?')">
                                            <button class="prod-delete-btn">DELETE PRODUCT</button>
                                        </a>
                                    </div>

                                <% } %>
                            <% }) %>

                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>
    </div>



</body>

</html>